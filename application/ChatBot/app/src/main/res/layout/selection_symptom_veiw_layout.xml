<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_selection_left_layout">

    <LinearLayout
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/symptom_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:background="@drawable/receiver_bubble_chat">

        <TextView
            android:id="@+id/selection_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="30dp"
            android:textSize="20dp"
            android:text="다음 중 해당되는 증상이 있으신가요?"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/symptom_list_layout"
        app:layout_constraintLeft_toLeftOf="@id/symptom_list_layout"
        android:layout_marginLeft="5dp"
        android:layout_width="45dp"
        android:elevation="1dp"
        android:layout_height="45dp"
        app:cardCornerRadius="25dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:background="@drawable/doctor"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>